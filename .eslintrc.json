{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": [1,"except-parens"],
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-ex-assign": 1,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": [2,"all"],
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-irregular-whitespace": 2,
        "no-obj-calls": 2,
        "no-fallthrough": 2,
        "use-isnan": 2,
        "valid-typeof": 2,
        "curly": [2,"all"],
        "eqeqeq": [1,"smart"],
        "no-useless-call": 2,
        "strict": [2,"global"],
        "camelcase": [2,{"properties":"always"}],
        "arrow-parens": [2,"as-needed"],
        "arrow-spacing": [2,{"before":true,"after":true}],
        "no-var": 2,
        "prefer-const": 1,
        "prefer-spread": 1,
        "no-console": 0,
        "no-constant-condition": 0        
  }
}